.global-navigation-container{class: ('no-navigation-menu' unless show_navigation_menu?)}
  .global-navigation-container-mask
    .global-navigation
      = render_navigation context: :global, level: 1
    - if show_navigation_menu?
      .navigation-content-wrapper
        .navigation-container-menu-base
          .scroll-provider{:role => "group", :tabindex => "-1"}
            - if content_for?(:global_navigation_menu_top)
              .navigation-container-menu-top= yield :global_navigation_menu_top
            .navigation-container-menu= render_navigation context: :global, level: 2
            - if content_for?(:global_navigation_menu_bottom)
              .navigation-container-menu-bottom= yield :global_navigation_menu_bottom              
  - if show_navigation_menu?
    .outer
      .shadow
      %a#navigation-resize-button-open.navigation-resize-button.open
        %i.fa.fa-fw.fa-angle-right
      %a#navigation-resize-button-close.navigation-resize-button.opened
        %i.fa.fa-fw.fa-angle-left
      %a.navigation-resize-button.closed
        %i.fa.fa-fw.fa-bars